import random
import time

rtx = 'список редкостей (чем ниже, тем лучше):обычное, редкое, эпическое,мифическое, легендарное, хроматическое, мегахроматическое, контр-хроматическое.'
print(rtx)
time.sleep(2)
print('')
# Определяем возможные награды
rewards = [
    "10000 монет",
    "25000 монет",
    "бревно(обычное)",
    "огненное бревно(редкое)",
    "зачарованное бревно(эпическое)",
    "дубовое бревно(мифическое)",
    "березовое бревно(мифическое)",
    "бревно чемпиона(легендарное)",
    "каменная глыбина(легендарное)",
    "зачарованная каменная глыбина(хроматическое)",
    "дубина(хроматическое)",
    "акула(мегахроматическое)",
    "кот(контр-хроматическое)"
]
def open_case():
    print("Открываем brёvnа кейс...")
    time.sleep(2)  # Задержка для эффекта ожидания
    reward = random.choice(rewards)
    print(f"Поздравляем! Вы получили: {reward}")
    print('')
    time.sleep(2)
# Запускаем открытие кейса
if __name__ == "__main__":
    while True:
        open_case()
        again = input("Если вы хотите открыть еще один кейс, нажмите Enter: ").strip().lower()
        if again != '':
            print("Спасибо за игру!")
            break
