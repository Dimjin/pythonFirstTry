import random
import time
def spin_fruits():
    fruits = ['üçí', 'üçã', 'üçá', 'üçâ']
    return [random.choice(fruits) for _ in range(3)]

def main():
    balance = 1000  # –ù–∞—á–∞–ª—å–Ω—ã–π –±–∞–ª–∞–Ω—Å

    while True:
        print(f"\n–í–∞—à —Ç–µ–∫—É—â–∏–π –±–∞–ª–∞–Ω—Å: {balance}üí∞")
        
        # –ü–æ–ø–æ–ª–Ω–µ–Ω–∏–µ –±–∞–ª–∞–Ω—Å–∞
        try:
            top_up = input("–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –¥–ª—è –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è –±–∞–ª–∞–Ω—Å–∞ (–Ω–∞–∂–º–∏—Ç–µ Enter, —á—Ç–æ–±—ã –ø—Ä–æ–ø—É—Å—Ç–∏—Ç—å): ")
            if top_up:
                top_up_amount = int(top_up)
                if top_up_amount < 0:
                    print("–°—É–º–º–∞ –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ–π.")
                elif top_up_amount > 100000:
                    print("–°—É–º–º–∞ –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è –Ω–µ –º–æ–∂–µ—Ç –ø—Ä–µ–≤—ã—à–∞—Ç—å 100000 —Ä—É–±–ª–µ–π.")
                else:
                    balance += top_up_amount
                    print(f"–í–∞—à –±–∞–ª–∞–Ω—Å —É—Å–ø–µ—à–Ω–æ –ø–æ–ø–æ–ª–Ω–µ–Ω –Ω–∞ {top_up_amount}üí∞. –ù–æ–≤—ã–π –±–∞–ª–∞–Ω—Å: {balance}üí∞")

            # –°—Ç–∞–≤–∫–∞
            bet = int(input("–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –¥–ª—è —Å—Ç–∞–≤–∫–∏ (0 –¥–ª—è –≤—ã—Ö–æ–¥–∞): "))
            if bet == 0:
                print("–°–ø–∞—Å–∏–±–æ –∑–∞ –∏–≥—Ä—É!")
                break
            if bet < 0 or bet > balance:
                print("–ù–µ–≤–µ—Ä–Ω–∞—è —Å—Ç–∞–≤–∫–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞.")
                continue
            
            print("–ö—Ä—É—Ç–∏–º...üé∞")
            time.sleep(2)
            result = spin_fruits()
            print(f"–†–µ–∑—É–ª—å—Ç–∞—Ç —Å–ø–∏–Ω–∞: {result}")

            if result[0] == result[1] == result[2]:  # –ï—Å–ª–∏ –≤—Å–µ —Ñ—Ä—É–∫—Ç—ã –æ–¥–∏–Ω–∞–∫–æ–≤—ã
                winnings = bet * (2 if result[0] == 'üçí' else 3)  # –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º –≤—ã–∏–≥—Ä—ã—à–∏ –∑–∞ —Ä–∞–∑–Ω—ã–µ —Ñ—Ä—É–∫—Ç—ã
                balance += winnings
                print(f"–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ {winnings}üí∞")
            else:
                balance -= bet
                print("–ö —Å–æ–∂–∞–ª–µ–Ω–∏—é, –≤—ã –ø—Ä–æ–∏–≥—Ä–∞–ª–∏.")

            if balance <= 0:
                print("–£ –≤–∞—Å –±–æ–ª—å—à–µ –Ω–µ—Ç –¥–µ–Ω–µ–≥. –ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞!")
                break

        except ValueError:
            print("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–µ —á–∏—Å–ª–æ.")

if __name__ == "__main__":
    main()
